<div class="ldoa-tab-body ldoa-front-page-tab {{tabBodySelectionClass "front-page"}}">
    <div class="ldoa-stats-line-4">
        <div class="ldoa-field">
            <label class="ldoa-label" for="ystem.damageDice.armed">
                <i class="fas fa-dice-six ldoa-dice-roll-icon ldoa-action-icon" title="{{localize 'ldoa.fields.titles.rollDie'}}" data-die="{{actor.system.damageDice.armed}}" data-id="{{actor.id}}" data-type="armedDamage"></i>
                {{localize "ldoa.fields.labels.damageArmed"}}
            </label>
            <select name="system.damageDice.armed" class="ldoa-input ldoa-select">
                {{selectOptions configuration.diceList localize=true selected=actor.system.damageDice.armed}}
            </select>
        </div>

        <div class="ldoa-field">
            <label class="ldoa-label" for="system.damageDice.unarmed">
                <i class="fas fa-dice-six ldoa-dice-roll-icon ldoa-action-icon" title="{{localize 'ldoa.fields.titles.rollDie'}}" data-die="{{actor.system.damageDice.unarmed}}" data-id="{{actor.id}}" data-type="unarmedDamage"></i>
                {{localize "ldoa.fields.labels.damageUnarmed"}}
            </label>
            <select name="system.damageDice.unarmed" class="ldoa-input ldoa-select">
                {{selectOptions configuration.diceList localize=true selected=actor.system.damageDice.unarmed}}
            </select>
        </div>

        <div class="ldoa-field">
            <label class="ldoa-label" for="system.maximumHitPoints">{{localize "ldoa.fields.labels.hitPointsMaximum"}}</label>
            <input type="number" name="system.maximumHitPoints" value="{{actor.system.maximumHitPoints}}" class="ldoa-input ldoa-centered-input" readonly />
        </div>

        <div class="ldoa-field">
            <label class="ldoa-label" for="system.currentHitPoints">{{localize "ldoa.fields.labels.hitPointsCurrent"}}</label>
            <input type="number" name="system.currentHitPoints" value="{{actor.system.currentHitPoints}}" class="ldoa-input ldoa-centered-input" />
        </div>
    </div>

    <div class="ldoa-stats-line-3">
        <div class="ldoa-field">
            <label class="ldoa-label" for="system.armour.description">{{localize "ldoa.fields.labels.armourDescription"}}</label>
            <input type="text" name="system.armour.description" value="{{actor.system.armour.description}}" class="ldoa-input" />
        </div>

        <div class="ldoa-field">
            <label class="ldoa-label" for="system.armour.type">{{localize "ldoa.fields.labels.armourType"}}</label>
            <select name="system.armour.type" class="ldoa-input ldoa-select">
                {{selectOptions configuration.armourNames localize=true selected=actor.system.armour.type}}
            </select>
        </div>

        <div class="ldoa-field">
            <label class="ldoa-label" for="system.armour.shield">{{localize "ldoa.fields.labels.shield"}}</label>
            <select name="system.armour.shield" class="ldoa-input ldoa-select">
                {{selectOptions configuration.yesNoList localize=true selected=actor.system.armour.shield}}
            </select>
        </div>
    </div>

    <div class="collapsible-widget" data-expanded="true">
    	<h2>
            <div class="ldoa-float-left collapsible-widget-toggle">
                <span class="collapsible-widget-icon"><i class="fas fa-plus"></i></span>
                <span class="collapsible-widget-icon"><i class="fas fa-minus"></i></span>
            </div>
            &nbsp;
            {{localize "ldoa.headers.weapons"}}
        </h2>
        <div class="collapsible-widget-target">
        	<div class="ldoa-weapon-entries">
            	<div>
            	    <span class="ldoa-column-header">{{localize "ldoa.headers.weaponName"}}</span>
            	</div>
            	<div>
        	    	<span class="ldoa-column-header">{{localize "ldoa.headers.weaponKind"}}</span>
            	</div>
                <div></div>
        	{{#each weapons as |weapon id|}}
        	    {{> "systems/lastdays/templates/partials/cs-weapon-entry.hbs" weapon}}
        	{{/each}}
            </div>
        </div>
    </div>

    <div class="collapsible-widget" data-expanded="true">
        <h2>
            <div class="ldoa-float-left collapsible-widget-toggle">
                <span class="collapsible-widget-icon"><i class="fas fa-plus"></i></span>
                <span class="collapsible-widget-icon"><i class="fas fa-minus"></i></span>
            </div>
            &nbsp;
            {{localize "ldoa.headers.boons"}}
        </h2>

        <div class="collapsible-widget-target">
            <div class="ldoa-boon-entries">
            {{#each boons as |boon id|}}
              {{> "systems/lastdays/templates/partials/cs-boon-entry.hbs" boon}}
            {{/each}}
            </div>
        </div>
    </div>

    <div class="collapsible-widget" data-expanded="true">
        <h2>
            <div class="ldoa-float-left collapsible-widget-toggle">
                <span class="collapsible-widget-icon"><i class="fas fa-plus"></i></span>
                <span class="collapsible-widget-icon"><i class="fas fa-minus"></i></span>
            </div>
            &nbsp;
            {{localize "ldoa.headers.backgrounds"}}
        </h2>

        <div class="collapsible-widget-target">
            <div class="ldoa-background-entries">
            {{#each backgrounds as |background id|}}
              {{> "systems/lastdays/templates/partials/cs-fp-background-entry.hbs" background}}
            {{/each}}
            </div>
        </div>
    </div>
</div>
